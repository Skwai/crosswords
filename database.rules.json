{
  "rules": {
    ".read": "true",
    ".write": "false",

    "games": {
      "$game": {
        "users": {
          "$user": {
            ".write": "$user == auth.uid || auth.token.isAdmin == true",
            ".validate": "newData.isBoolean()"
          }
        }
      }
    },

    "boards": {
      "$board": {
        "$y": {
          "$x": {
            "value": {
              ".write": "auth.uid != null || auth.token.isAdmin == true",
              ".validate": "newData.isString()"
            }
          }
        }
      }
    }
  }
}
