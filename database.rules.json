{
  "rules": {
    ".read": "true",
    ".write": "false",

    "games": {
      "$game": {
        "users": {
          "$user": {
            ".write": "$user == auth.uid"
          }
        }
      }
    },

    "boards": {
      "$board": {
        "$y": {
          "$x": {
            "value": {
              ".write": "auth.uid != null"
            }
          }
        }
      }
    }
  }
}
